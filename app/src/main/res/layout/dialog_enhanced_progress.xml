<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/premium_background">

    <!-- Operation Icon and Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/operation_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_download"
            app:tint="@color/premium_accent_green" />

        <TextView
            android:id="@+id/operation_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Operation in Progress"
            android:textColor="@color/premium_text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Progress Bar Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <!-- Background Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/premium_slider_progress"
            android:layout_gravity="center" />

        <!-- Progress Percentage Overlay -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/premium_text_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center|end"
            android:background="@color/premium_background"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

    </FrameLayout>

    <!-- Status Message -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing operation..."
        android:textColor="@color/premium_text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:minHeight="40dp"
        android:gravity="center_vertical" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Cancel/Retry Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/premium_text_primary"
            android:background="@drawable/premium_button_outline"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Additional Info (Optional) -->
    <LinearLayout
        android:id="@+id/additional_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/premium_divider"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/additional_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/premium_text_secondary"
            android:textSize="12sp"
            android:text="Additional information will appear here" />

    </LinearLayout>

</LinearLayout>
